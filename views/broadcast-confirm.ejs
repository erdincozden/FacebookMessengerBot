<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <%include  partials/head %>

</head>
<body class="container">

<header>
    <%include  partials/header %>
</header>

<main>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-xs-12">
                <p>Message:</p>
                <textarea readonly><%= message %></textarea>
            </div>
            <div class="col-md-8 col-xs-12">
                <% if(newstype===1){%>
                    <p>Weekly</p>
                <%} else if(newstype===2){%>
                    <p>Daily</p>
                <%}%>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-xs-12">
                <a class="btn btn-success" href="/broadcast-send">SEND</a>
                <a class="btn btn-default" href="/broadcast-send">CANCEL</a>
            </div>
            <div class="col-md-8 col-xs-12">
                <p>Message will be sent <%=numUsers%></p>
                <p>List of users:</p>
                <ul>
                    <% users.forEach(function(user){ %>
                        <li><%=user.first_name%> <%=user.last_name%></li>
                    <%})%>
                </ul>
            </div>
        </div>
    </div>
</main>

<footer>
    <%include  partials/footer %>
</footer>

</body>
</html>


